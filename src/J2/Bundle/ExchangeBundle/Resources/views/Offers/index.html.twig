{% extends '::base.html.twig' %}

{% block title %} Your Offers {%endblock%}

{% block content %}
<div class="oneTwo">
    <div class="widgets">
        <div class="widget">
            <div class="title">
                <img src="{{ asset('bundles/j2exchange/images/icons/dark/stats.png')}} " alt="" class="titleIcon">
                <h6>{{ company.name }} Offers</h6>
            </div>
            <table cellpadding="0" cellspacing="0" width="100%" class="sTable">
                <thead>
                <tr>
                    <td>Remaining</td>
                    <td>Name</td>
                    <td>List Price</td>
                    <td>Whisper Price</td>
                    <td>Matches</td>
                    <td>Active</td>
                </tr>
                </thead>
                <tbody>
                {% for offer in offers %}
                    <tr>
                        <td align="center">{{ offer.available }}</td>
                        <td>{{ offer.name }}</td>
                        <td>${{ offer.listPrice | number_format(2) }}</td>
                        <td>${{ offer.whisperPrice | number_format(2) }}</td>
                        <td>xx</td>
                        <td>{{ offer.active }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}