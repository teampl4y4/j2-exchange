{% extends '::base.html.twig' %}

{% block title %} {{ offer.name | truncate(35, false, '..') }} {%endblock%}
{% block headline %} {{ offer.name | truncate(35, false, '..') }} {% endblock %}
{% block tagLine %} {{ offer.description | truncate(50, false, '...') }} {% endblock %}

{% block content %}
    <div class="widgets">

        <div class="widget">
            <div class="title">
                <img src="{{ asset('bundles/j2exchange/images/icons/dark/imagesList.png') }}" alt="Matches" class="titleIcon">
                <h6>Matches For {{ offer.name }}</h6>
            </div>

            <table id="offersTable" cellpadding="0" cellspacing="0" width="100%" class="sTable">
                <thead>
                    <tr>
                        <td>Product</td>
                        <td>Company</td>
                        <td>Retail Price</td>
                        <td>Remaining</td>
                        <td>Added Value</td>
                        <td>Type</td>
                    </tr>
                </thead>

                <tbody id="offersBody">
                {% for match in offer.matches %}
                    {% for matchedOffer in match.offers %}
                        {% if matchedOffer.id != offer.id %}
                            <tr>
                                <td><a href="#" class="webStatsLink"> {{ matchedOffer.product.name }} </a></td>
                                <td align="center"><a href="#">{{ matchedOffer.company.name }}</a></td>
                                <td align="center">{{ matchedOffer.listPrice }} </td>
                                <td align="center">{{ match.available }}</td>
                                <td align="center" class="green"><b>{{ (matchedOffer.listPrice / offer.listPrice) * 100 }}%</b></td>
                                <td align="center">
                                    {% for category in matchedOffer.product.categories %}
                                    <span class="blueBack">{{ category.name }}</span>
                                    {% endfor %}
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>

        </div>

    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}