{% extends '::base.html.twig' %}

{% block title %} Your Products {%endblock%}
{% block headline %}{{company.name}} Catalog{% endblock %}
{% block tagLine %}Products for company {{ company.name }}{%endblock%}

{% block middleNav %}
<div class="wrapper">
    <div class="controlB">
        <ul>
            <li><a href="{{ path( '_add_product') }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/plus.png') }}" alt=""><span>Add New Product</span></a></li>
            <li><a href="{{ path( '_products') }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/library.png') }}" alt=""><span>Back to Catalog</span></a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
{% endblock%}

{% block content %}
<div class="oneOne">
    <div class="widgets">
        <form id="productForm" action="return false">
            <fieldset>
                <div class="widget">
                    <div class="title">
                        <img src="{{ asset('bundles/j2exchange/images/icons/dark/stats.png')}} " alt="" class="titleIcon">
                        <h6>New Product</h6>
                    </div>
                    <div class="formRow">
                        <label for="maxRangeAmount">Name:</label>
                        <div class="formRight">
                            {{ form_widget(form.name) }}
                                <div class="fix"></div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="formRow">
                            <label for="maxRangeAmount">ID/SKU:</label>
                            <div class="formRight">
                            {{ form_widget(form.code) }}
                                    <div class="fix"></div>
                                </div>
                                <div class="clear"></div>
                            </div>
                            <div class="formRow">
                                <label>Price:</label>
                                <div class="formRight">
                            {{ form_widget(form.price) }}
                                        <div class="fix"></div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="formRow">
                                    <label>Description:</label>
                                    <div class="formRight">
                            {{ form_widget(form.description) }}
                                            <div class="fix"></div>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                    <div class="formRow">
                                        <label>Active:</label>
                                        <div class="formRight">
                            {{ form_widget(form.active) }}
                                            </div>
                                            <div class="clear"></div>
                                        </div>
                    {{ form_widget(form._token) }}
                                        <div class="formSubmit">
                                            <input type="submit" value="submit" class="redB">
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/j2exchange/js/backbone/form.js') }}"></script>
<script type="text/javascript">
(function ($) {
    var product = Backbone.Model.extend({
        defaults: {
            name: '',
            code: '',
            price: '',
            description: '',
            active: 1
        },
        url: '{{ path( '_create_product') }}'
    });

    var productView = Backbone.View.extend({
        initialize: function() {
            _.bindAll(this);
        }
    });
    var myProduct;
    var myView;
    $(document).ready(function(){
        myProduct = new product();
        myView = new productView({
            el: $('#productForm'),
            model: myProduct
        });

        myView.populate('j2_bundle_exchangebundle_productstype');
        myView.parse('j2_bundle_exchangebundle_productstype');
    });
    $("#productForm").submit(function(event){
        event.preventDefault();
        myView.parse('j2_bundle_exchangebundle_productstype');
        myProduct.save();
    });

})(jQuery);
</script>
{%endblock%}