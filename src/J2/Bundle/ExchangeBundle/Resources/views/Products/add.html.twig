{% extends '::base.html.twig' %}

{% block title %} Your Products {%endblock%}
{% block headline %}{{company.name}} Catalog{% endblock %}
{% block tagLine %}Products for company {{ company.name }}{%endblock%}

{% block middleNav %}
<div class="wrapper">
    <div class="controlB">
        <ul>
            <li><a href="{{ path( '_add_product') }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/plus.png') }}" alt=""><span>Add New Product</span></a></li>
            <li><a href="{{ path( '_products') }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/library.png') }}" alt=""><span>Back to Catalog</span></a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
{% endblock%}

{% block content %}
<div class="oneOne">
    <div class="widgets">
        <form>
            <fieldset>
                <div class="widget">
                    <div class="title">
                        <img src="{{ asset('bundles/j2exchange/images/icons/dark/stats.png')}} " alt="" class="titleIcon">
                        <h6>New Product</h6>
                    </div>
                    <div class="formRow">
                        <label for="maxRangeAmount">Name:</label>
                        <div class="formRight">
                            {{ form_widget(form.name) }}
                            <div class="fix"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label for="maxRangeAmount">ID/SKU:</label>
                        <div class="formRight">
                            {{ form_widget(form.code) }}
                            <div class="fix"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label>Price:</label>
                        <div class="formRight">
                            {{ form_widget(form.price) }}
                            <div class="fix"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label>Description:</label>
                        <div class="formRight">
                            {{ form_widget(form.description) }}
                            <div class="fix"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="formRow">
                        <label>Active:</label>
                        <div class="formRight">
                            {{ form_widget(form.active) }}
                        </div>
                        <div class="clear"></div>
                    </div>
                    {{ form_widget(form._token) }}
                    <div class="formSubmit">
                        <input type="submit" value="submit" class="redB">
                    </div>
                    <div class="clear"></div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}