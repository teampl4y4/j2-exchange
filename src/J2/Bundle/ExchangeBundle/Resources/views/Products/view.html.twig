{% extends '::base.html.twig' %}

{% block title %} Your Products {%endblock%}
{% block headline %}{{company.name}} Catalog{% endblock %}
{% block tagLine %}Products for company {{ company.name }}{%endblock%}

{% block middleNav %}
<div class="wrapper">
    <div class="controlB">
        <ul>
            <li><a href="#" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/plus.png') }}" alt=""><span>Add New Product</span></a></li>
            <li><a href="{{ path( '_products') }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/library.png') }}" alt=""><span>Back to Catalog</span></a></li>
            <li><a href="{{ path( '_edit_product', {'id': product.id }) }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/edit.png') }}" alt=""><span>Edit Product</span></a></li>
            <li><a href="{{ path( '_delete_product', {'id': product.id }) }}" title=""><img src="{{ asset('bundles/j2exchange/images/icons/control/32/busy.png') }}" alt=""><span>Delete Product</span></a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
{% endblock%}

{% block content %}
<div class="oneOne">
    <div class="widgets">
        <div class="widget">
            <div class="title">
                <img src="{{ asset('bundles/j2exchange/images/icons/dark/stats.png')}} " alt="" class="titleIcon">
                <h6>{{product.name}}</h6>
            </div>
            <div class="formRow">
                <label for="maxRangeAmount">ID/SKU:</label>
                <div class="formRight">
                    {{product.code}}
                    <div class="fix"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">
                <label>Price:</label>
                <div class="formRight">
                    {{ product.price | craue_currency }}
                    <div class="fix"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">
                <label>Description:</label>
                <div class="formRight">
                    {{ product.description }}
                    <div class="fix"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">
                <label>Active:</label>
                <div class="formRight">
                    {% if product.active > 0 %}
                        <img src="{{ asset('bundles/j2exchange/images/icons/color/tick.png')}}" alt="enabled">
                    {% else %}
                        <img src="{{ asset('bundles/j2exchange/images/icons/color/cross.png')}}" alt="disabled">
                    {% endif %}
                    <div class="fix"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="widget">
            <div class="title">
                <img src="{{ asset('bundles/j2exchange/images/icons/dark/stats.png')}} " alt="" class="titleIcon">
                <h6>Product Offers</h6>
                <div class="num"><a href="#" class="greenNum">{{product.offers | length}}</a></div>
            </div>
            <table cellpadding="0" cellspacing="0" width="100%" class="sTable">
                <thead>
                <tr>
                    <td>Remaining</td>
                    <td>Name</td>
                    <td>List Price</td>
                    <td>Whisper Price</td>
                    <td>Matches</td>
                    <td>Active</td>
                </tr>
                </thead>
                <tbody>
                {% for offer in product.offers %}
                    <tr>
                        <td align="center"><a href="#" class="webStatsLink">{{ offer.available }}</a></td>
                        <td><a href="#">{{ offer.name | truncate(25, false, '..') }}</a></td>
                        <td align="center">{{ offer.listPrice | craue_currency }}</td>
                        <td align="center">{{ offer.whisperPrice | craue_currency }}</td>
                        <td align="center">{{ offer.matches | length }}</td>
                        <td align="center">
                            {% if offer.active > 0 %}
                                <img src="{{ asset('bundles/j2exchange/images/icons/color/tick.png')}}" alt="enabled">
                            {% else %}
                                <img src="{{ asset('bundles/j2exchange/images/icons/color/cross.png')}}" alt="disabled">
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
        <script type="text/javascript">
            (function ($) {

                var products = new Backbone.Collection;

                var productsTable = new J2.ProductsTable({
                    collection: products
                });

                $('#productsBody').replaceWith(productsTable.el);

                function updateProducts(data, status, xhr) {
                    products.add( data.response );
                }

                $.ajax({
                    url: '/api/products',
                    dataType: 'json',
                    success: updateProducts
                });
            
                function deleteProduct(id){
                    product = products.get(id);
                    product.destroy();
                    products.remove(product);
                }

            })(jQuery);
            </script>
{%endblock%}